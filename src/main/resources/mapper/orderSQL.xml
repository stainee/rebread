<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="order">
	<insert id="insertOrder" parameterType="o">
		insert into orders values
		(orders_seq.nextval, 2, 2, '결제완료', to_char(sysdate, 'yyyy-mm-dd'), 1,100, #{orderName}, #{orderAddr}, #{orderPhone}, 0, null)
	</insert>
	
	<select id="searchOrderNo" resultType="_int">
		select max(order_no) from orders
	</select>
	
	<insert id="insertPaymentKey" parameterType="o">
		insert into orders (paymentKey) values (#{paymentKey}); 
	</insert>
</mapper>
